<!--新闻列表-->
<view>
  <swiper indicator-dots="true" autoplay="true" interval="2000">

    <swiper-item>
      <image src="/images/wx.png"></image>
    </swiper-item>

    <swiper-item>
      <image src="/images/iqiyi.png"></image>
    </swiper-item>

    <swiper-item>
     <image src="/images/vr.png"></image>
    </swiper-item>

  </swiper>
  
  <!--文章内容-->
  <block wx:for="{{data}}" wx:for-item="itemName">
  <view class="post-container">
    <view class="post-author-date">
      <image class="post-author" src="{{itemName.avatar}}"></image>
      <text class="post-date">{{itemName.date}}</text>
    </view>

    <text class="post-title">{{itemName.title}}</text>
    <image class="post-image" src="{{itemName.imgSrc}}"></image>
    <text class="post-content">{{itemName.content}}</text>

    <view class="post-like">
      <image class="post-like-image" src="/images/icon/chat1.png"></image>
      <text class="post-like-font">{{itemName.reading}}</text>
      <image class="post-like-image" src="/images/icon/view.png"></image>
      <text class="post-like-font">{{itemName.collection}}</text>
    </view>
  </view>
 </block>

</view>