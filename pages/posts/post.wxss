
swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 0rpx;
  background-color:#fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  /*display: flex;
  flex-direction: row;*/
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
  /*margin-bottom: 20rpx;*/
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 20rpx;
}

.post-content {
  color:#666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}



